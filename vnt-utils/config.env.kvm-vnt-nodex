# KVM VNT network node configuration

#--------------------------------------------------------------------------------------
# KVM_GUEST_NAME: The name of the VNT network node.
unset KVM_GUEST_NAME
: ${KVM_GUEST_NAME:=kvm-vnt-node2}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_HOST_RAM: The RAM (GB) of the KVM VNT VM.
unset KVM_GUEST_RAM
: ${KVM_GUEST_RAM:=4096}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_HOST_SIZE: The size (GB) of the KVM VNT VM.
unset KVM_GUEST_SIZE
: ${KVM_GUEST_SIZE:=10}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_GUEST_TYPE: The name of the VNT network node.
unset KVM_GUEST_TYPE
: ${KVM_GUEST_TYPE:="Linux"}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_GUEST_VARIANT: The name of the VNT network node.
unset KVM_GUEST_VARIANT
: ${KVM_GUEST_VARIANT:="debian9"}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_GUEST_ISO: The name of the VNT network node.
unset KVM_GUEST_ISO
: ${KVM_GUEST_ISO:="debian-9.12.0-amd64-netinst.iso"}
#--------------------------------------------------------------------------------------

#--------------------------------------------------------------------------------------
# KVM_IMAGES_DIR: KVM VNT images directory
unset KVM_IMAGES_DIR
: ${KVM_IMAGES_DIR:="/home/tbuser/kvm-images"}
#--------------------------------------------------------------------------------------




